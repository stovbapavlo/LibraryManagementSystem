<Window x:Class="LibraryManagementSystem.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddBookWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="txtTitle" Margin="5"/>
            <TextBlock Text="Author:"/>
            <TextBox x:Name="txtAuthor" Margin="5"/>
            <TextBlock Text="Genre:"/>
            <TextBox x:Name="txtGenre" Margin="5"/>
            <TextBlock Text="Year:"/>
            <TextBox x:Name="txtYear" Margin="5"/>
            <TextBlock Text="Pages:"/>
            <TextBox x:Name="txtPages" Margin="5"/>
            <CheckBox x:Name="chkAvailable" Content="Is Available" Margin="5"/>
            <Button Content="Зберегти" Click="SaveBook_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
