<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Management System" Height="350" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Додати книгу" Click="AddBook_Click"/>
            <Button Content="Змінити книгу" Click="UpdateBook_Click"/>
            <Button Content="Видалити книгу" Click="DeleteBook_Click"/>
            <Button Content="Список книг" Click="ShowBooks_Click"/>
        </StackPanel>
    </Grid>
</Window>
